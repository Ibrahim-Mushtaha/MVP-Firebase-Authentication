<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MVPDesignPatternsLoginValidation" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="primary_button_background" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/header</item>
        <item name="cornerRadius">@dimen/radius_4</item>
        <item name="elevation">@dimen/elevation_4</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/tajawal_bold</item>
        <item name="android:backgroundTint" tools:ignore="NewApi">@color/yellow</item>
        <item name="android:layout_marginStart" tools:ignore="DuplicateDefinition">@dimen/margin_16</item>
        <item name="android:layout_marginEnd">@dimen/margin_16</item>
        <item name="android:layout_marginTop">@dimen/margin_16</item>
        <item name="android:padding">14sp</item>
        <item name="android:textSize" tools:ignore="DuplicateDefinition">@dimen/font_16</item>
    </style>

</resources>